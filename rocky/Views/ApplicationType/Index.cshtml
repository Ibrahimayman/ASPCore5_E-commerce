@model IEnumerable<rocky.Models.ApplicationType>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6">
            <a class="btn btn-primary" asp-action="Create" asp-controller="ApplicationType"> Create New Type </a>
        </div>
    </div>
    <br /><br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" width="100%">
            <thead>
                <tr>
                    <th>Name </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td></td>
                    </tr>
                }
            </tbody>
        </table> }
    else
    {
        <p>THere is no application types</p>
    }
</div>

