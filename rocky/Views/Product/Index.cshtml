@model IEnumerable<rocky.Models.Product>
@{
    ViewData["Title"] = "Products";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>
        <div class="col-6">
            <a class="btn btn-primary" asp-action="UpSert" asp-controller="Product">
                <i class="fas fa-plus"></i> &nbsp; Create New Product
            </a>
        </div>
    </div>
    <br /><br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" width="100%">
            <thead>
                <tr>
                    <th> Product Name </th>
                    <th> Price </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Price</td>
                        <td>

                            <div class="w-75 btn-group" role="group">
                                <a asp-action="UpSert" asp-route-Id="@item.Id" class="btn btn-primary mx-2">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-danger mx-2">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </div>

                        </td>
                    </tr>
                }
            </tbody>
        </table> }
    else
    {
        <p>THere is no Products</p>
    }
</div>

