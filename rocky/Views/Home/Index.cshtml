@model rocky.Models.ViewModels.HomeVM

<div class="container">
    <div class="text-center">
        <button class="btn btn-danger filter-button" data-filter="all">All</button>
        @foreach (var item in Model.Categories)
        {
            <button class="btn btn-outline-secondary" data-filter="@item.Name.Replace(' ','_')">@item.Name</button>
        }
    </div>
    <div class="row">
        @foreach (var item in Model.Products)
        {
            <partial name="_IndividualProductCard" model="item" />
        }
    </div>
</div>


@section Scripts{
    <script>
    $(document).ready(function(){
    $(".filter-button").click(function(){
        var value = $(this).attr('data-filter');
        if(value == "all")
        {
            $('.filter').show('1000');
        }
        else
        {
            $(".filter").not('.'+value).hide('3000');
            $('.filter').filter('.'+value).show('3000');
        }
    });
});
    </script>
}